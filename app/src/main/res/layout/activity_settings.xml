<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background"
    android:descendantFocusability="blocksDescendants">

    <Button
        android:id="@+id/close_settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Close"
        android:backgroundTint="@color/md_theme_light_secondary"
        android:textColor="@color/md_theme_light_onSecondary"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/update_account_settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="Update"
        android:backgroundTint="@color/md_theme_light_secondary"
        android:textColor="@color/md_theme_light_onSecondary"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/close_settings_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:background="@drawable/circle"
        android:src="@drawable/pics" />

    <EditText
        android:id="@+id/settings_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_image"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Full Name..."
        android:padding="10dp" />

    <EditText
        android:id="@+id/settings_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_fullname"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="E-mail..."
        android:padding="10dp" />

    <EditText
        android:id="@+id/settings_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_email"
        android:layout_margin="15dp"
        android:hint="Phone Number..."
        android:padding="10dp" />

</RelativeLayout>