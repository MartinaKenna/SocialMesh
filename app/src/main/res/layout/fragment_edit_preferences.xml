<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:textSize="16sp"
            android:textStyle="bold"
            android:src="@drawable/baseline_arrow_back_ios_brown_24dp"
            android:elevation="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/button_navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Conferma"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" />

    </RelativeLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social:"
        style="@style/Widget.MaterialComponents.TextView"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="8sp"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        />
    <HorizontalScrollView
        android:id="@+id/HorizontalScrollViewSocialMedia"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instagram"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="7dp" />

            <Button
                android:id="@+id/button_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twitter"
                android:layout_marginRight="7dp" />

            <Button
                android:id="@+id/button_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:layout_marginRight="7dp" />

        </LinearLayout>


    </HorizontalScrollView>
    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="8sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_marginBottom="5dp"/>
    <HorizontalScrollView
        android:id="@+id/HorizontalScrollViewSport"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_calcio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcio"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="7dp" />

            <Button
                android:id="@+id/button_basket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basket"
                android:layout_marginRight="7dp" />

            <Button
                android:id="@+id/button_tennis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tennis"
                android:layout_marginRight="7dp" />
            <Button
                android:id="@+id/button_boxe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boxe"
                android:layout_marginRight="7dp" />
            <Button
                android:id="@+id/button_crossfit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crossfit"
                android:layout_marginRight="7dp" />
            <Button
                android:id="@+id/button_yoga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yoga"
                android:layout_marginRight="7dp" />

            <Button
                android:id="@+id/button_palestra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Palestra"
                android:layout_marginRight="7dp" />
            <Button
                android:id="@+id/button_motorsport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MotorSport"
                android:layout_marginRight="7dp" />

        </LinearLayout>
    </HorizontalScrollView>
    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cucina"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="8sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_marginBottom="5dp"/>
    <HorizontalScrollView
