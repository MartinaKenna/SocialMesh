<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="@string/indietro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="63dp"
            android:id="@+id/profile_picture"
            android:layout_height="63dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            android:contentDescription="@string/profile_picture" />

        <TextView
            android:id="@+id/nomeChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:textSize="24sp"
            app:flow_verticalAlign="center" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_above="@+id/LinearLayoutChat"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/LinearLayoutChat"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:weightSum="100">

        <EditText
            android:id="@+id/messageBox"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="85"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/message_box_background"
            android:hint="@string/digita_un_messaggio" />

        <ImageView
            android:id="@+id/sentButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_forward_24"
            android:layout_weight="15" />

    </LinearLayout>

</RelativeLayout>
