<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcome.ForgotPasswordFragment">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="30dp"
            app:startIconDrawable="@drawable/baseline_mail_outline24dp"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/testo_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signup2"
                android:backgroundTint="#6AFFFFFF"
                android:hint="@string/email"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonRecupera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="100dp"
            android:backgroundTint="#6AFFFFFF"
            android:text="@string/reset"
            android:textColor="#000000"
            android:textSize="16sp"
            app:icon="@drawable/baseline_login_black_24dp"
            app:iconTint="#000000"
            tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btn_back_to_login"
        android:text="@string/torna_al_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_below="@id/buttonRecupera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        />
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/buttonRecupera"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>