<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">


        <HorizontalScrollView

            android:id="@id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonAll"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#94FF6503"
                            android:text="All"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorLink="#30FFFFFF" />

                        <Button
                            android:id="@+id/HipHopRap"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#94FF6503"
                            android:text="Hip-HopRap"
                            android:layout_marginEnd="10dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorLink="#30FFFFFF" />

                        <Button
                            android:id="@+id/Latin"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#94FF6503"
                            android:text="Latin"
                            android:layout_marginEnd="10dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorLink="#30FFFFFF" />

                        <Button
                            android:id="@+id/Rock"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#94FF6503"
                            android:text="Rock"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorLink="#30FFFFFF" />
                </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                app:cardCornerRadius="40dp"
            android:layout_below="@id/scrollView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:hint="Cerca..."
                    android:backgroundTint="#6AFFFFFF"/>

        </androidx.cardview.widget.CardView>



        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<TextView
            android:id="@+id/nearYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Near You"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nearYou"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/lastAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/barra"
            android:layout_marginTop="15dp"
            android:text="Last Added"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textSize="20dp"/>

        <View
            android:id="@+id/barra"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/recyclerviewEvents"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@color/black"
            tools:ignore="MissingConstraints" />
        <View
            android:id="@+id/barra2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/recyclerviewEvents"
            android:layout_marginEnd="370dp"
            android:layout_marginStart="30dp"
            android:background="@color/black"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="10dp"/>

        <View
            android:id="@+id/barra3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/recyclerviewEvents"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="370dp"
            android:background="@color/black"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="10dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="10dp"
            android:id="@+id/recyclerviewNearYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastAdded"
            android:layout_marginTop="30dp"
            />

</RelativeLayout>