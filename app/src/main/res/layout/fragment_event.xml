<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/socialmesh_orange"
    android:descendantFocusability="blocksDescendants">

        <Button
            android:id="@+id/HipHopRap"
            android:layout_width="102dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#6AFFFFFF"
            android:text="Hip-HopRap"
            android:textColor="#000000"
            android:textColorLink="#30FFFFFF"
            android:textAlignment="center" />

        <Button
            android:id="@+id/Latin"
            android:layout_width="101dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/HipHopRap"
            android:backgroundTint="#6AFFFFFF"
            android:text="Latin"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorLink="#30FFFFFF" />

        <Button
            android:id="@+id/Rock"
            android:layout_width="101dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/Latin"
            android:backgroundTint="#6AFFFFFF"
            android:text="Rock"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorLink="#30FFFFFF" />


        <SearchView
            android:id="@+id/searchView"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Latin"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/icona_di_ricerca"/>

        <TextView
            android:id="@+id/nearYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:text="Near You"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nearYou"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/lastAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/barra"
            android:layout_marginTop="15dp"
            android:text="Last Added"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textSize="20dp"/>

        <View
            android:id="@+id/barra"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/recyclerviewEvents"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints" />
        <View
            android:id="@+id/barra2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/recyclerviewEvents"
            android:layout_marginEnd="370dp"
            android:layout_marginStart="30dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="10dp"/>

        <View
            android:id="@+id/barra3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/recyclerviewEvents"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="370dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="10dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="10dp"
            android:id="@+id/recyclerviewNearYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastAdded"
            android:layout_marginTop="30dp"
            />

</RelativeLayout>